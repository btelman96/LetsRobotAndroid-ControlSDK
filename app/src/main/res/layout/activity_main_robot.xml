<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/cloudStatusIcon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/circle"
            android:scaleType="centerInside"
            android:src="@drawable/ic_cloud_black_24dp"/>
        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/cameraStatusIcon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/circle"
            android:scaleType="centerInside"
            android:src="@drawable/ic_camera_alt_black_24dp"/>
        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/micStatusIcon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/circle"
            android:scaleType="centerInside"
            android:src="@drawable/ic_mic_black_24dp"/>
        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/ttsStatusIcon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/circle"
            android:scaleType="centerInside"
            android:src="@drawable/ic_record_voice_over_black_24dp"/>
        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/robotStatusIcon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/circle"
            android:scaleType="centerInside"
            android:src="@drawable/ic_developer_board_black_24dp"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Enable"

        android:id="@+id/recordButtonMain" />
    <Button
        android:text="Settings"
        android:id="@+id/settingsButtonMain"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <SurfaceView
        android:id="@+id/cameraSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>