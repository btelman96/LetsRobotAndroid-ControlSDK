<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="tv.letsrobot.controller.android">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".RobotApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <meta-data
            android:name="com.bugsnag.android.API_KEY"
            android:value="451020ca1fe775c40065ae897c760d61" />

        <service
            android:name="tv.letsrobot.android.api.robot.drivers.UsbService"
            android:enabled="true"
            android:permission="" />
        <service android:name="com.ford.openxc.webcam.webcam.WebcamService" />

        <activity
            android:name=".activities.UsbInterceptor"
            android:excludeFromRecents="true"
            android:exported="false"
            android:label="LetsRobot USB"
            android:noHistory="true"
            android:process=":UsbEventReceiverActivityProcess"
            android:taskAffinity="com.example.taskAffinityUsbEventReceiver">
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/usb_device_filter" />
        </activity>
        <activity
            android:name=".activities.MainRobotActivity"
            android:keepScreenOn="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat" />
        <activity android:name="tv.letsrobot.android.api.activities.ChooseBluetoothActivity" />
        <activity
            android:name=".activities.ManualSetupActivity"
            android:label="LetsRobot Controller Setup" />
        <activity
            android:name=".activities.SplashActivity"
            android:label="LetsRobot Controller">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.QRActivity"
            android:label="@string/title_activity_qr"
            android:parentActivityName=".activities.ManualSetupActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tv.letsrobot.controller.android.activities.ManualSetupActivity" />
        </activity>
    </application>

</manifest>